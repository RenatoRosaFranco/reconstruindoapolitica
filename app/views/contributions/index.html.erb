<% provide :title, 'Contribuições' %>

<section id="presenter" class="jumbotron">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ul class="list-unstyled text-center">
						<li><h1><i class='glyphicon glyphicon-search'></i></h1></li>
						<li><h1>CONTRIBUA</h1></li>
						<li><p>Fique a vontade para contribuir com o movimento.</p></li>
						<ul class="list-unstyled list-inline">
							<li><%= link_to 'MENSALMENTE', '', class: 'btn btn-default btn-lg top' %></li>
							<li><%= link_to 'ANUALMENTE',  '', class: 'btn btn-primary btn-lg top' %></li>
						</ul>
				</ul>				
			</div>
		</div>
	</div>
</section>

<section id="content" class="container">
	<div class="row">
		<div class="col-md-12">
			<ul class="breadcrumb">
				<li><%= link_to 'Home', root_path %></li>
				<li><%= link_to 'Contribuições', contributions_path %></li>
			</ul>
		</div>
		
		<div id='plan' class='row'>
			<div class="col-md-12">
				<% (1..4).each do |plan| %>
					<div class="col-md-3">
						<div class='panel panel-default'>
							<ul class="list-unstyled padding">
									<li><h4><strong>Small</strong></h4></li>
									<li><p>Melhor para free-lancer.</p></li>
									<li><h2>R$ 10.00</h2></li>
									<li><%= link_to 'CONTRIBUIR', '', 
									class: 'btn btn-primary btn-lg top' %></li>
							</ul>
					</div>
							<div id="beneficies" style="padding: 0px !important; margin-top: -20px;">
								<ul class="list-unstyled">
								<% (1..3).each do |beneficy| %>
									<li class='list-group-item'><%= link_to 'Beneficy', '' %></li>	
								<% end %>
								</ul>
							</div>
					</div>
				<% end %>
			</div>
		</div>

		<div id="faq" class='row'>
			<div class="col-md-12">
				 <ul class="text-center list-unstyled">
				 		<li><h1><i class='glyphicon glyphicon-search'></i></h1></li>
				 		<li><h2>Perguntas frequentes</h2></li>
				 		<li><hr></li>
				 </ul>

				 <% (1..3).each do |question| %>
						<div class="panel panel-default padding">
							<ul class="list-unstyled">
								<li><h4>Some Question</h4></li>
							</ul>
						</div>
				 <% end %>
			</div>
		</div>

	</div>
</section>